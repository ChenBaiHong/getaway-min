/* pages/inpatient/details.wxss */

scroll-view {
  overflow-y: auto;
}

/* head */
.head {
  position: relative;
  z-index: 100000;
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  height: 48rpx;
  padding: 20rpx;
  box-shadow: 0 0 30rpx #e0e0e0;
  background-color: #fff;
}
.head van-icon {
  display: flex;
  align-items: center;
}
.head .van-icon {
  margin: 0 30rpx;
}
.head .date {
  flex: 1 1 auto;
  text-align: center;
}

.balance {
  color: #f60;
}

/* cell-group */
.cell-group {
  margin-top: 30rpx;
  box-shadow: 0 0 30rpx #e0e0e0;
}
.cell-group .van-cell__title {
  color: #666;
}
.cell-group .van-cell__value {
  display: flex;
  justify-content: flex-end;
  color: #333;
}
.cell-group .balance {
  margin-right: 10rpx;
  text-decoration: underline;
}

/* panel */
.panel {
  margin-top: 30rpx;
  box-shadow: 0 0 30rpx #e0e0e0;
  padding-bottom: 10rpx;
}
.panel .code {
  width: 160rpx;
  padding-left: 10rpx;
}
.panel .title {
  flex: 1 1 0%;
  padding-left: 10rpx;
}
.panel .price,
.panel .count,
.panel .amount {
  width: 100rpx;
  padding-left: 10rpx;
  font-weight: 400;
  text-align: center;
}
.panel-head {
  display: flex;
  height: 68rpx;
  padding: 0 20rpx;
  background-color: #efefef;
  border-top: 2rpx solid #e0e0e0;
  border-bottom: 2rpx solid #efefef;
}
.panel-head view {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 400;
  text-indent: -10rpx;
}
.panel-head view + view {
  border-left: 2rpx solid #e0e0e0;
}

.panel-list {
  margin: 30rpx 20rpx 0 20rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 0 30rpx #efefef;
}
.panel-list-head {
  display: flex;
  align-items: center;
  height: 58rpx;
  padding: 0 10rpx;
  border-bottom: 2rpx solid #e0e0e0;
  border-radius: 8rpx 8rpx 0 0;
  background-color: #efefef;
  color: #3e697a;
}
.panel-list-item {
  display: flex;
  position: relative;
}
.panel-list-item view {
  padding: 10rpx 0;
}
.panel-list-item view:first-child {
  color: #999;
}
.panel-list-item + .panel-list-item:before {
  content: '';
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  border-top: 2rpx dashed #e0e0e0;
}
.panel-list-item .price,
.panel-list-item .count {
  color: #3e697a;
}

/* total */
.total {
  display: flex;
  align-items: center;
  margin: 30rpx 20rpx 0 20rpx;
  padding: 10rpx;
  border-top: 2rpx dashed #e0e0e0;
}
.total .balance {
  margin-right: 10rpx;
  font-size: 32rpx;
  text-decoration: underline;
}

/* tips */
.tips {
  padding: 30rpx;
  font-weight: 400;
  color: #f44;
}

.no-data {
  padding-top: 100rpx;
  text-align: center;
  color: #888;
}
.no-data view {
  font-size: 12px;
  margin: auto;
  text-align: center;
  font-weight: 500;
}
