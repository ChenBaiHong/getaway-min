/* pages/inpatient/confirm.wxss */

.content {
  padding: 30rpx;
}

/* panel */
.panel {
  border-radius: 10rpx;
  box-shadow: 0 0 30rpx #e0e0e0;
  overflow: hidden;
}
.panel .van-panel__footer {
  padding: 20rpx 30rpx;
}
.panel .van-cell__title {
  color: #666;
}
.panel .van-field__input--disabled {
  color: #333;
}
.panel .balance {
  color: #f44;
}

.cell-textarea {
  display: flex;
  flex-direction: column;
  height: 200rpx;
}
.cell-textarea .textarea {
  flex: 1 1 auto;
  width: 100%;
  height: auto;
  line-height: 36rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}
.cell-textarea rich-text.textarea {
  overflow-y: auto;
}

/* actions */
.button {
  margin: 10rpx 0;
}
.actions {
  display: flex;
  /* padding: 0 30rpx; */
}
.actions .button {
  flex: 1 1 auto;
  /* margin: 30rpx 0; */
}
.actions .button + .button {
  margin-left: 30rpx;
}

/* popup */
.popup-title {
  line-height: 48rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
}
.radio-group view.van-cell {
  display: flex;
  align-items: center;
}
.radio-group view.van-cell__title {
  margin-left: 20rpx;
}

.no-data {
  padding-top: 200rpx;
  text-align: center;
  color: #888;
}
.no-data view {
  font-size: 12px;
  margin: auto;
  text-align: center;
  font-weight: 500;
}

.btn-wrap {
  display: flex;
  justify-content: center;
}
.btn-wrap button {
  flex: 1;
}

.input-wrap {
  line-height: 48rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  position: relative;
}
.input-wrap:after {
  position: absolute;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  content: ' ';
  pointer-events: none;
  top: auto;
  right: 0;
  bottom: 0;
  left: 16px;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.input-wrap .label {
  min-width: 90px;
  max-width: 90px;
}

.input-wrap .input {
  text-align: right;
  width: 100%;
}

.van-collapse-item {
  margin-bottom: 10px;
}

.collapse-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cell view.van-cell {
  padding: 20rpx 0;
}
.van-collapse-item .van-collapse-item__content {
  padding-top: 0;
}
.van-collapse-item .van-cell:after {
  left: 0;
}
.main-color {
  color: #3e697a;
}
.font-bold {
  font-weight: 600;
  color: #666;
}
