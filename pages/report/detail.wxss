/* pages/report/detail.wxss */
van-cell-group van-cell:nth-of-type(1) .van-cell__value {
  color: #333;
}
.reportDetailList {
  /* border-radius: 20rpx; */
  margin-top: 30rpx;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.05);
}
.title {
  padding: 0 0 20rpx;
  position: relative;
}
.title::after {
  position: absolute;
  box-sizing: border-box;
  transform-origin: center;
  content: ' ';
  pointer-events: none;
  top: auto;
  right: 0;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #ebedf0;
  transform: scaleY(0.5);
}
.deportName {
  color: #666;
  font-size: 26rpx;
}
.deportList view.van-col.van-col--6 {
  padding: 10rpx 0;
  text-align: center;
}
